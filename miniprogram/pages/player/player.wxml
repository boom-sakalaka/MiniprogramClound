<view wx:if="{{picUrl}}" class="player-container" style="background:url({{picUrl}}) center/cover no-repeat"></view>
<view class="player-mask"></view>

<view class="player-info">
  <view class="player-disc">
    <image class="player-img" src="{{picUrl}}"></image>
  </view>
</view>

<view class="control">
  <text class="iconfont icon-shangyishoushangyige"></text>
  <text class="iconfont icon-bofang"></text>
  <text class="iconfont icon-xiayigexiayishou"></text>
</view>