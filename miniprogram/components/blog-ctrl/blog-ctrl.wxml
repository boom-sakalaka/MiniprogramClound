<view class="ctrl">
  <view class="ctrl-item" bind:tap="onComment">
    <i class="iconfont icon-pinglun icon" />
    <text class="item">评论</text>
  </view>
  <view class="ctrl-item share">
    <i class="iconfont icon-fenxiang icon" />
    <text class="item">分享</text>
  </view>
</view>

<x-login 
  modalShow="{{loginShow}}"
  bind:loginsuccess = "onLoginsuccess"
  bind:loginfail="onLoginfail"
  />

  <x-bottom-modal modalShow="{{modalShow}}">
    <form slot="modal-content" report-submit="true" bind:submit="onSend">
      <textarea  name="content" class="comment-content" placeholder="写评论" value="{{content}}" fixed="true"></textarea>
      <button class="send" form-type="submit"  size="mini">发送</button>
	  </form>
  </x-bottom-modal>