<view class="container">
  <text class="time">{{showTime.currentTime}}</text>
  <view class="control">
    <movable-area class="movable-area">
      <movable-view 
      direction="horizontal" 
      damping="1000"
      x="{{movableDis}}"
      bindchange="onChange"
      bindtouchend="onTouchEnd"
      class="movable-view"
      >
      </movable-view>
    </movable-area>
    <progress 
      stroke-width="4" 
      backgroundColor="#969696" 
      activeColor="#fff" 
      percent="{{progress}}">
    </progress>
  </view>
  <text class="time">{{showTime.totalTime}}</text>
</view>
